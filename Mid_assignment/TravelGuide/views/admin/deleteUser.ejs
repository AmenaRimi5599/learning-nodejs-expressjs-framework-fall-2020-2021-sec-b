  *{
    font-size: 20px;
    font-family: "Times New Roman", Times, serif; 
  }
</style>
<body>

<div class="w3-sidebar w3-dark-grey w3-bar-block" style="width:15%">
   <h3 class="w3-bar-item">Travel Guide</h3>
  <a href="/admin/userList" class="w3-bar-item w3-button" >User List</a>
  <a href="/admin/allTouristSpot" class="w3-bar-item w3-button">Tourist Spots</a>
  <a href="/admin/adminProfile" class="w3-bar-item w3-button" >Profile</a>
  <a href="/logout" class="w3-bar-item w3-button">logout</a>
</div>

<div style="margin-left:15%">

<div class="w3-container w3-light-grey">
<nav class="navbar navbar-light bg-light justify-content-between">
    <a class="navbar-brand" href="/user/viewEvents"></a>
    <form class="form-inline">
    </form>
  </nav>  
</div>



<div class="w3-container">
<div class="container"> 
<form method="post">
    <fieldset>
      <legend>Delete User</legend>
      <table>
        <tr>
          <td>Name :</td>
          <td><%=user[0].name%></td>
        </tr>
        <tr>
          <td>Username :</td>
          <td><%=user[0].userName%></td>
        </tr>
        <tr>
          <td>Email :</td>
          <td><%=user[0].email%></td>
        </tr>
        <tr>
          <td>User Type :</td>
          <td><%=user[0].userType%></td>
        </tr>
        <tr>
          <td>Image :</td>
          <td><img src="/assets/img/<%= user[0].image%>"></td>
        </tr>
      </table>
      <div>
        <h3>Are you sure?</h3>
        <input type="submit" name="submit" value="Confirm">
      </div>
    </fieldset>
  </form>
    
  </div>
</div>

</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
